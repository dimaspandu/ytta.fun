{
  "root": true,
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "extends": [
    "eslint:recommended",
    "plugin:vue/vue3-essential",
    "standard"
  ],
  "rules": {
    "semi": ["error", "always"], 
    "quotes": ["error", "single"],
    "max-len": ["warn", { "code": 120 }],
    "no-console": "warn",
    "no-unused-vars": "warn"
  }
}
